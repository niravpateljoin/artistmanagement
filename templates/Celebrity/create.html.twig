{% extends 'Layout/base.html.twig' %}
{% if action == 'add' %}
    {% set title = 'Create Celebrity'|trans %}
{% else %}
    {% set title = 'Update Celebrity'|trans %}
{% endif %}

{% block stylesheet %}
    <style type="text/css">
        
        form {
            border: 2px solid;
            border-radius: 29px;
            padding: 36px;
        }
        .role > .form-control {
            background-color: rgba(33, 33, 33, 0.02);
    border: 1px solid rgba(0, 0, 0, 0.12);
    border-radius: 50%;
    cursor: pointer;
    display: inline-block;
    height: 14px;
    line-height: 1;
    margin: 0 6px 0 0;
    outline: none;
    position: relative;
    vertical-align: -3px;
    width: 14px;
        }
    </style>
{% endblock %}
{% block title %}{{ title }}{% endblock %}

{% block content %}
    <div class="container">
        <div class="container-fluid">
           <div class="row">
            {% if action == 'add' %}
                <h2 class="text-center"> Add Celebrity </h2>
            {% else %}
                <h2 class="text-center"> Edit Celebrity </h2>
            {% endif %}
                <div class="col-xs-3 col-md-3">
                </div>
                <div class="col-xs-6 col-md-6">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                </div>
                <div class="col-xs-3 col-md-3">
                </div>
           </div> 
            
        </div>
    </div>
{% endblock %}